{
  "name": "pudgytech-boilerplate",
  "version": "1.0.0",
  "description": "PudgyTech React Boilerplate",
  "private": true,
  "scripts": {
    "build" : "webpack",
    "build-babel": "npm run build-babel-server && npm run build-babel-client",
    "build-babel-server": "babel src/server --out-dir ./dist",
    "build-babel-client": "babel src/client --copy-files --out-dir ./dist/public",
    "start": "node ./dist/server.js",
    "test": "jest ./src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ShaneECDavis/pudgytech-boilerplate.git"
  },
  "keywords": [
    "Node",
    "React"
  ],
  "author": "Shane Davis",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ShaneECDavis/pudgytech-boilerplate/issues"
  },
  "homepage": "https://github.com/ShaneECDavis/pudgytech-boilerplate#readme",
  "dependencies": {
    "express": "^4.16.4",
    "react": "^16.6.0",
    "react-dom": "^16.6.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^8.0.4",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^3.1.0",
    "jest": "^23.6.0",
    "webpack": "^4.24.0",
    "webpack-cli": "^3.1.2",
    "webpack-node-externals": "^1.7.2"
  }
}
